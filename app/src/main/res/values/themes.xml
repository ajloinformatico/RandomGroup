<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandomGroup" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="Theme.RandomGroup">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--texts-->
    <style name="title">
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="subStyle">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="text_large">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_overly">
        <item name="android:gravity">center|start</item>
        <item name="android:padding">@dimen/dp20</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/back_ground_overly</item>
    </style>

    <!--play button-->
    <style name="playBottom">
        <item name="android:tint">@color/black</item>
    </style>

    <!--infolojo banner-->
    <style name="infolojoBanner">
        <item name="android:background">@color/black</item>
    </style>

    <!--continue button -->
    <style name="commonButton">
        <item name="android:backgroundTint">@color/black_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="sendCouples">
        <item name="android:backgroundTint">@color/success</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="warningBase">
        <item name="android:backgroundTint">@color/warning</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--recycler cardView -->
    <style name="customCardView">
        <item name="android:backgroundTint">@color/cardview_background</item>
    </style>

    <style name="customCardView.Clicked">
        <item name="android:backgroundTint">@android:color/holo_green_light</item>
    </style>

    <style name="customCardViewContent">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>